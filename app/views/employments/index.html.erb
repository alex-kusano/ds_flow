<h1>Procura&ccedil;&otilde;es</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Role</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employments.each do |employment| %>
      <tr>
        <td><%= employment.company %></td>
        <td><%= employment.role %></td>
        <td><%= employment.contact %></td>
        <td><%= link_to 'Destroy', employment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

