<h1>Procura&ccedil;&otilde;es</h1>

<table class="table">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Cargo</th>
      <th>Singnat&aacute;rio</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @employments.each do |employment| %>
      <tr>
        <td><%= employment.company %></td>
        <td><%= employment.role %></td>
        <td><%= employment.contact %></td>
        <td><%= link_to 'Destroy', employment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4" class="text-center"><%= link_to 'Nova Procuração', new_employment_path %></td>
    </tr>
  </tfoot>
</table>

