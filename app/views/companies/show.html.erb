<p id="notice"><%= notice %></p>

<h3>Empresa: <span class="small"><%= @company.to_s %></span></h3>
<hr>
<p>
  <h4>
    <strong>Nome:</strong>
    <%= @company.name %>  
  </h4>
</p>

<h4>Procura&ccedil;&otilde;es:</h4>
<table class="table">
  <thead>
    <tr>
      <th>Cargo</th>
      <th>Signat&aacute;rio</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @company.employments.each do |employment| %>
    <tr>
      <td><%= employment.role %></td>
      <td><%= employment.contact %></td>
      <td><%= link_to 'Excluir', employment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3", class="text-center"><%= link_to 'Nova Procuração', new_employment_path( build_company_params @company ) %></td>      
    </tr>
  </tfoot>
</table>
<br>

<%= link_to 'Atualizar', edit_company_path(@company) %> |
<%= link_to 'Voltar', companies_path %>
