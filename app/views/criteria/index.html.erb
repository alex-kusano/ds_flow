<h1>Criterium List</h1>

<table class="table">
  <thead>
    <tr>
      <td>Role</td>
      <td>Role Count</td>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @criteria.each do |criterium| %>
      <tr>
        <td><%= criterium.role %></td>
        <td><%= criterium.count %></td>
        <td><%= link_to 'Show', criterium %></td>
        <td><%= link_to 'Edit', edit_criterium_path(criterium) %></td>
        <td><%= link_to 'Destroy', criterium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5" class="text-center"><%= link_to 'New Criterium', new_criterium_path %></td>
    </tr>
  </tfoot>
</table>

<div class="text-right">
  <%= paginate @criteria %>
  <%= page_entries_info @criteria %>
</div>

