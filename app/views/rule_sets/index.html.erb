<h1>Classes</h1>

<div class="row">
  <div class="col-sm-offset-8 col-sm-4">
      <form action="" method="get">
        <div class="input-group">
          <input type="text" name="by_code" class="form-control">
          <span class='input-group-btn'>
            <button type="submit" class="btn btn-default" aria-label="Left Align">
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </button>
          </span>
        </div>
      </form>    
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Classe</th>
      <th>Regra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rule_sets.each do |rule_set| %>
      <tr>
        <td><%= rule_set.code %></td>
        <td><%= rule_set.to_s %></td>
        <td><%= link_to 'Detalhes', rule_set %></td>
        <td><%= link_to 'Atualizar', edit_rule_set_path(rule_set) %></td>
        <td><%= link_to 'Excluir', rule_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5", class="text-center"><%= link_to 'Nova Classe de Regras', new_rule_set_path %></td>
    </tr>
  </tfoot>
</table>
<div class="text-right">
  <%= paginate @rule_sets %>
  <%= page_entries_info @rule_sets %>
</div>
<br>


