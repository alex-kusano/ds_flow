<p id="notice"><%= notice %></p>
<h3>Rule Set: <span class="small"><%= @rule_set.code %></span></h3>
<hr>
<p>
  <strong>Category Code:</strong>
  <%= @rule_set.code %>
</p>

<p>
  <strong>Rules:</strong>   
  <table class="table">    
    <thead>
      <tr>
        <th>Rule</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @rules.each do |rule| %>
      <tr>
        <td><%= rule %></td>
        <td><%= link_to 'Edit', rule_path( build_rule_set_params rule ) %></td>
        <td><%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3" class="text-center"><%= link_to 'Add Rule', new_rule_path( build_rule_set_params ) %></td>      
      </tr>
    </tfoot>
  </table>

  <div class="text-right">
    <%= paginate @rules %>
    <%= page_entries_info @rules %>
  </div>
</p>

<%= link_to 'Edit', edit_rule_set_path(@rule_set) %> |
<%= link_to 'Back', rule_sets_path %>
